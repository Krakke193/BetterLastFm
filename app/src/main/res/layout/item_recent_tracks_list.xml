<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight">

    <ImageView
        android:id="@+id/list_imageview"
        android:layout_width="@dimen/list_item"
        android:layout_height="45dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:src="@drawable/female"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_weight="3"
            android:id="@+id/list_textview"
            android:text="test text text"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/card_between_space_margin"
            android:gravity="center_vertical"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/recent_tracks_list_date"
            android:layout_weight="2"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/card_between_space_margin"
            android:gravity="top"/>

    </LinearLayout>



</LinearLayout>